package practice.submult01;

public class result03 {

	public static void main(String[] args) {
		int example = 278;
		int i= example /100;
		int i1 = (example /10) %10;
		int i2 = example%10;
		int sum = i +i1 + i2;
		System.out.println("결과는 :" +sum);
		
		String x = example + "";
		
		char y = x.charAt(0);
		char y1 = x.charAt(1);
		char y2 = x.charAt(2);
	
		int n =  (int)y - '0';
		int n1 = (int)y1 - '0';
		int n2 = (int)y2 - '0';
		System.out.println(n);
		System.out.println(n1);
		System.out.println(n2);
			
		

	}

}
