package ch09_class.future;

import java.util.ArrayList;
import java.util.Collections;

import ch09_class.school.Student;

public class FutureMain {

	public static void main(String[] args) {
		ArrayList<FutureStudent> stuList = new ArrayList<FutureStudent>();
		
		System.out.println("김규영"+"Kim GyuYeong");
		System.out.println("김동현"+"Kim GyuYeong    ");
		System.out.println("김상준"+"Kim DongHyun    ");
		System.out.println("김성운"+"Kim SangJun     ");
		System.out.println("김세준"+"Kim SungUn      ");
		System.out.println("노윤기"+"Kim SeJun       ");
		System.out.println("박근혜"+"Noh YoonGi      ");
		System.out.println("사원기"+"Park GeunHye    ");
		System.out.println("송현지"+"Sa WeonGi       ");
		System.out.println("신가희"+"Song HyunJi     ");
		System.out.println("예준서"+"Shin GaHee      ");
		System.out.println("윤가영"+"Ye JunSeo       ");
		System.out.println("윤서준"+"Yoon GaYoung    ");
		System.out.println("이규환"+"Yun SeoJun      ");
		System.out.println("이상희"+"Lee GyuHwan     ");
		System.out.println("이영규"+"Lee SangHee     ");
		System.out.println("이재우"+"Lee YoungGyu    ");
		System.out.println("이호제"+"Lee JaeWoo      ");
		System.out.println("임지윤"+"Lee HoJe        ");
		System.out.println("정민형"+"Lim JiYoon      ");
		System.out.println("조하은"+"Jeong MinHyeong ");
		System.out.println("최민혁"+"Jo HaEun        ");
		System.out.println("최성웅"+"Choi MinHyeock  ");
		System.out.println("Choi"+"SungWoong  ");
		
		//11일이 지났습니다.
		for( int i =0; i <11; i++) {
			System.out.println((i+1) +"일차==============");
			for(FutureStudent stu: stuList) {
				stu.endDay();
				
			}
			try {
				Thread.sleep(1000);
				
			}catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		Collections.sort(stuList, (stuA, stuB)->
									 stuB.getLevel() - stuA.getLevel());
		for(int i=0; i< stuList.size(); i++) {
			System.out.println((i+1) + "등." +stuList.get(i));
		}
		System.out.println(FutureStudent.getCnt());
								
                
	}

}
